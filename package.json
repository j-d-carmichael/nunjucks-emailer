{
  "name": "nunjucks-emailer",
  "version": "2.0.1",
  "description": "Simple email sender utilizing nunjucks templates for html and txt with tpl helpers",
  "licence": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "install:githooks": "cp ./githooks/* .git/hooks",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "test:unit:single": "jest --collect-coverage false",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "build:tocs": "npx doctoc .",
    "build": "rm -fR ./build && tsc -d --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "ttsc --watch -p .",
    "start": "node cli.js",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johndcarmichael/nunjucks-emailer.git"
  },
  "keywords": [
    "nunjucks",
    "email",
    "sendgrid"
  ],
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.1.0",
    "inline-css": "^4.0.2",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/inline-css": "^3.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/nunjucks": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^8.35.0",
    "eslint-plugin-deprecate": "^0.7.0",
    "hasha": "^5.2.2",
    "jest": "^29.4.3",
    "recursive-readdir-sync": "^1.0.6",
    "ts-jest": "^29.0.5",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.5"
  }
}
